---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import logo1 from "../assets/whatsapp.png";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
---

<!doctype html>
<html lang="es">
  <head>
    <BaseHead
      title={`${SITE_TITLE} - Productos`}
      description={SITE_DESCRIPTION}
    />
    <style>
      /* --- Variables y Base --- */
      :root {
        /* Colores asumidos de tu esquema visual (verde y dorado) */
        --primary-green: #2e8b57;
        --primary-gold: #ffc107;
        --pure-white: #ffffff;
        --text-dark: #333333;
        --premium-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        --premium-border: 1px solid rgba(0, 0, 0, 0.05);
        --transition-smooth: all 0.3s ease;
        --transition-bounce: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
      }

      body {
        font-family: "Arial", sans-serif;
        line-height: 1.6;
        color: var(--text-dark);
        padding-top: 90px;
        background-color: #f7f7f7; /* Fondo ligero para resaltar las tarjetas */
      }

      /* --- Sección Principal --- */
      .productos-section {
        padding: 60px 20px;
        max-width: 1200px;
        margin: 0 auto;
      }

      .productos-title {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 40px;
        color: #2c3e50;
        position: relative;
        animation: fadeInUp 0.8s ease-out;
      }

      .productos-title::after {
        content: "";
        display: block;
        width: 100px;
        height: 3px;
        background: linear-gradient(
          90deg,
          var(--primary-green),
          var(--primary-gold)
        );
        margin: 10px auto;
        animation: fadeInUp 0.8s ease-out;
      }

      .productos-intro {
        text-align: center;
        animation: fadeInUp 0.8s ease-out;
      }
      

      .productos-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 40px;
        margin-top: 50px;
        animation: fadeInUp 0.8s ease-out;
      }

      /* --- Estilos de Tarjeta --- */
      .producto-card {
        background: var(--pure-white);
        border-radius: 20px;
        box-shadow: var(--premium-shadow);
        overflow: hidden;
        transition: var(--transition-smooth);
        border: var(--premium-border);
        position: relative;

        /* Ajuste de altura para uniformidad en el grid */
        display: flex;
        flex-direction: column;
        transition:
          transform 0.3s ease,
          box-shadow 0.3s ease;
      }

      /* Retrasos de animación omitidos por brevedad */

      .producto-card:hover {
        transform: translateY(-10px) scale(1.02);
        box-shadow: 0 20px 40px rgba(46, 139, 87, 0.2);
      }

      .producto-image {
        width: 100%;
        height: 220px;
        object-fit: cover;
        transition: transform 0.3s ease;
      }

      .producto-content {
        padding: 25px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        flex-grow: 1;
      }

      .producto-title {
        font-size: 1.6rem;
        margin-bottom: 12px;
        color: var(--text-dark);
        font-weight: 700;
      }

      .producto-description {
        color: var(--text-dark);
        margin-bottom: 0.1px;
        line-height: 1.5;
        font-size: 0.95rem;
        flex-grow: 1; /* Empuja el footer hacia abajo */
      }

      .producto-price {
        font-size: 1.3rem;
        font-weight: 800;
        color: var(--primary-green);
        display: inline-block;
        background: linear-gradient(
          135deg,
          var(--primary-green),
          var(--primary-gold)
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        position: relative;
      }

      /* --- Footer de la Tarjeta (Precio y Botones) --- */
      .producto-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 1px;
      }

      .producto-actions {
        display: flex;
        gap: 120px; /* Espacio entre los botones */
        flex-wrap: wrap;
      }

      /* --- Estilos de Botones --- */
      /* Botón Principal (Pedir/WhatsApp) */
      .btn-premium {
        display: flex; /* Para alinear el icono de WhatsApp */
        align-items: center;
        padding: 6px 14px; /* Un poco más grande para el icono */
        background: linear-gradient(
          135deg,
          var(--primary-green),
          var(--primary-gold)
        );
        color: var(--pure-white);
        font-size: 0.85rem;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 600;
        transition: var(--transition-bounce);
        box-shadow: 0 4px 10px rgba(46, 139, 87, 0.4); /* Sombra más fuerte */
        border: none;
        cursor: pointer;
      }

      /* Botón Secundario (Ver Detalles) */
      .btn-secondary {
        display: flex;
        align-items: center;
        padding: 6px 14px;
        background: transparent; /* Fondo transparente */
        color: var(--primary-green); /* Color del texto primario */
        font-size: 0.85rem;
        border-radius: 50px;
        text-decoration: none;
        font-weight: 600;
        transition: var(--transition-smooth);
        border: 1px solid var(--primary-green); /* Borde sutil */
        cursor: pointer;
        box-shadow: none;
      }

      .btn-secondary:hover {
        background: rgba(46, 139, 87, 0.1); /* Ligero hover */
        transform: translateY(-2px);
      }

      /* Estilos para el icono de WhatsApp */
      .whatsapp-icon {
        width: 25px;
        height: 25px;
        margin-right: 6px;
        vertical-align: middle;
      }

      /* Estilos para la sección CTA */
      .cta-section {
        text-align: center;
        padding: 60px 20px;
        background: linear-gradient(
          135deg,
          rgba(46, 139, 87, 0.1) 0%,
          rgba(255, 140, 0, 0.1) 100%
        );
        margin-top: 80px;
        position: relative;
        overflow: hidden;
        animation: fadeInUp 0.8s ease-out;
      }

      .cta-section::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.05'%3E%3Ccircle cx='30' cy='30' r='2'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E")
          repeat;
        animation: patternMove 30s linear infinite;
      }

      .cta-section h2 {
        font-size: 2.2rem;
        margin-bottom: 20px;
        color: var(--text-dark);
        position: relative;
        z-index: 1;
      }

      .cta-section p {
        font-size: 1.1rem;
        margin-bottom: 30px;
        color: var(--text-dark);
        position: relative;
        z-index: 1;
      }

      .cta-section .btn-premium {
        display: inline-flex;
        justify-content: center;
        align-items: center;
        padding: 12px 30px;
        font-size: 1.1rem;
        margin-top: 20px;
        width: auto;
      }

      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      /* --- Animaciones y Media Queries (sin cambios) --- */
      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      /* Enhanced Responsive Design */
      @media (max-width: 480px) {
        .productos-section {
          padding: 40px 10px;
        }

        .productos-title {
          font-size: 2rem;
          margin-bottom: 30px;
        }

        .productos-grid {
          grid-template-columns: 1fr;
          gap: 30px;
        }

        .producto-card {
          min-height: auto;
          max-width: 100%;
        }

        .producto-card img{
          height: auto;
        }

        .producto-content {
          padding: 20px;
        }

        .producto-content h3 {
          font-size: 1.9rem;
          margin-bottom: 10px;
        }

        .producto-description {
          font-size: 0.9rem;
          margin-bottom: 0.05px;
        }

        .producto-price {
          font-size: 1.2rem;
        }

        .producto-footer {
          flex-direction: column;
          align-items: flex-start;
          margin-top: 0px;
        }

        .producto-actions {
          width: 100%;
          gap: 150px;
          justify-content: space-between;
        }

        .btn-premium,
        .btn-secondary {
          flex-grow: 1;
          justify-content: center;
          padding: 10px 12px;
          font-size: 0.8rem;
        }

        .whatsapp-icon {
          width: 20px;
          height: 20px;
          margin-right: 4px;
        }
      }

      @media (max-width: 768px) {
        .productos-section {
          padding: 50px 15px;
        }

        .productos-title {
          font-size: 2.3rem;
          margin-bottom: 35px;
        }

        .productos-grid {
          grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
          gap: 35px;
        }

        .producto-card {
          min-height: auto;
        }

        .producto-image {
          height: 200px;
        }

        .producto-content {
          padding: 22px;
        }

        .producto-title {
          font-size: 1.5rem;
          margin-bottom: 11px;
        }

        .producto-description {
          font-size: 0.92rem;
          margin-bottom: 0.08px;
        }

        .producto-price {
          font-size: 1.25rem;
        }

        .producto-footer {
          flex-direction: column;
          align-items: flex-start;
          margin-top: 0.5px;
        }

        .producto-price {
          margin-bottom: 8px;
        }

        .producto-actions {
          width: 100%;
          justify-content: space-between;
        }

        .btn-premium,
        .btn-secondary {
          flex-grow: 1;
          justify-content: center;
        }
      }

      @media (max-width: 1024px) {
        .productos-grid {
          grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
          gap: 35px;
        }

        .producto-card {
          max-width: 100%;
        }
      }
    </style>
  </head>

  <body>
    <Header />
    <section class="productos-section" id="productos">
      <h1 class="productos-title">Nuestros Productos Naturales</h1>
      <p class="productos-intro">
        En <strong>SANYA S.A.C.</strong> elaboramos productos 100% naturales con
